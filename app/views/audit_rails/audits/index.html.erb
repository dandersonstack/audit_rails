<h1>Listing audits</h1>

<%= link_to "Download Audit Report", audit_rails.audits_path(:format => "xls") %>

<table>
  <tr>
    <th>Action</th>
    <th>Controller</th>
    <th>Description</th>
    <th>User name</th>
    <th>When?</th>
  </tr>

<% @audits.each do |audit| %>
  <tr>
    <td><%= audit.action %></td>
    <td><%= audit.controller %></td>
    <td><%= audit.description %></td>
    <td><%= audit.user_name %></td>
    <td><%= distance_of_time_in_words(audit.created_at, Time.now) %> ago</td>
  </tr>
<% end %>
</table>

